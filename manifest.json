{
    "manifest_version": 2,
    "name": "Shanbay helper",
    "description": "A helpful extension of Shanbay.",
    "version": "0.0.1",
    "externally_connectable": {
        "ids": [
            "*"
        ]
    },
    "browser_action": {
        "default_icon": {},
        "default_title": "Shanbay Helper"
    },
    "permissions": [
        "tabs",
        "webRequest",
        "webRequestBlocking",
        "background"
    ],
    "background": {
        "scripts": [
            "js/config.js", "js/Shanbay.js", "js/bg.js"
        ],
        "persistent": true
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "css": [],
        "js": ["js/content.js"]
    }]
}